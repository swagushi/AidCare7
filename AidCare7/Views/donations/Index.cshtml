@model IEnumerable<AidCare7.Models.donation>

@{
    ViewData["Title"] = "Donations";
}

<h1>Donations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DonationDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.donationAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonationDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.donationAmount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.donationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.donationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.donationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
